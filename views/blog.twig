{% block content %}
<h1>Blog</h1>
    {% for post in posts %}
        <a href="/php/index.php/blog/{{ post.id }}">  <h2>{{ post.title }}</h2></a> <br>
    <p>{{ post.content }}</p><br>
    <p>{{ post.created_at }}</p>
    {% endfor %}
{% endblock %}